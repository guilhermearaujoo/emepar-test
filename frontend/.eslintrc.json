{
  "extends": ["@trybe/eslint-config-frontend"],
  "overrides": [
    {
      "files": ["src/tests/**/*.ts"],
      "rules": {
        "max-len": [
          "error",
          {
            "code": 90,
            "ignoreComments": true,
            "ignoreUrls": true,
            "ignoreRegExpLiterals": true,
            "ignoreStrings": true
          }
        ],
        "max-lines": [ "off" ],
        "no-magic-numbers": ["off"]
      }
    }
  ]
}
